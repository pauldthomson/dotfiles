# Use vi mode
set -o vi

# PROMPT CONFIG
source ~/.bash_prompt

# COLOR COMMANDS
export LSCOLORS=ExFxBxDxCxegedabagacad
alias ls='ls -G'
alias grep='grep --colour=auto'
alias fgrep='fgrep --colour=auto'
alias egrep='egrep --colour=auto'

# ALIASES
alias ll='ls -la'
alias la='ls -A'
alias l='ls -CF'
alias mci='mvn clean install'
alias mcis='mvn clean install -DskipTests'
alias mbr='mvn spring-boot:run'
alias mbrr='register_cwd_artefact && mbr'

export EDITOR="vim"

# Initialise jenv
export PATH="$HOME/.jenv/bin:$PATH"
eval "$(jenv init -)"

if [ -f ~/.bash_functions ]; then
	. ~/.bash_functions
fi

if [ -f $(brew --prefix)/share/bash_completion ]; then
	. $(brew --prefix)/share/bash_completion
fi

# NVM Setup
export NVM_DIR="$HOME/.nvm"
. "/usr/local/opt/nvm/nvm.sh"

# Grep colours
export GREP_COLORS="ms=01;31:mc=01;31:sl=48;5;2:cx=:fn=35:ln=32:bn=32:se=36"
